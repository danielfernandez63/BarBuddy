@model IEnumerable<BarBuddy.Models.TabRecipes>

@{
    ViewBag.Title = "Tab Tracker";
}
<body style="background-image: url('/Images/Halo.png');">

    <p>
        @Html.ActionLink("Update Order", "Create")
    </p>
    <p>
        @Html.ActionLink("Tabs", "Index","Tabs")
    </p>
    <p>Below Are the customers and drinks ordered per customer</p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Recipe.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tab.Name)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Recipe.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Tab.Name)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.TabRecipe }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.TabRecipe })
                </td>
            </tr>
        }

    </table>
</body>