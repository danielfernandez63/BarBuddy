@model IEnumerable<BarBuddy.Models.Tab>

@{
    ViewBag.Title = "Index";
}
<body style="background-image: url('/Images/Halo.png');">

    <h2>Index</h2>

    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Bartender.ApplicationUserId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Total)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CheckOut)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Bartender.ApplicationUserId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Total)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CheckOut)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.TabId }) |
                    @Html.ActionLink("Details", "Details", new { id = item.TabId }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.TabId })
                </td>
            </tr>
        }

    </table>
</body>